#!/bin/sh 

sudo apt-get update
sudo apt-get -y install git
apt-get -y install at-spi2-core
apt-get -y install libatk-bridge2.0-0
apt-get -y install libatk-adaptor
apt-get -y install gconf2
apt-get -y install python-dev
apt-get -y install python-pip
apt-get -y install python-pyatspi2
apt-get -y install python-gtk3
apt-get -y install python-gtk3-dev
apt-get -y install python-pil
apt-get -y install python-gobject
apt-get -y install python-gobject-2
apt-get -y install statgrab
apt-get -y install wmctrl
apt-get -y install lsof
apt-get -y install libxml2-dev
apt-get -y install libxslt1-dev
apt-get -y install gcc

pip install rpyc
pip install psutil
pip install selenium
pip install chromedriver_installer
pip install Skype4py
pip install lxml
pip install caldav
pip install pycarddav
pip install icalendar

git config --global http.sslVerify false
git clone https://git.fedorahosted.org/git/dogtail.git
cd dogtail
sudo python setup.py install
cd .. 
ln -s /usr/lib/i386-linux-gnu/gtk-2.0/ /usr/lib/gtk-2.0

